{{> navbar}}
<main class="page-main">
    <header class="profileHeader">
        <div class="profileContainer">
            <div class="profileAvatar">
                <span class="userImage">
                    <img src="{{profile_picture}}" width="110" height="110" id="profile-md">
                </span>
                <div class="thumb_meta">
                    <a href="#uploadProfilePic" data-toggle="modal" id="change-profile">
                        Change profile picture</a></div>

            </div>
            <div class="profileInfo">
                <h1 class="profileInfoTitle">
                    {{username}}
                </h1>
            </div>
            <div class="profileNavigation">
                <ul>
                    <li class="profile-navigation-tab">
                        <a href="#" id="view-favorites">
                            Favorites
                        </a>
                    </li>
                    <li class="profile-navigation-tab" id="view-myprojects">
                        <a href="#">My Projects</a>
                    </li>
                </ul>
            </div>

        </div>
    </header>
    <div >
        <div class= "projectFeed">
            <ul class="projectList">
            {{#each projects}}
                {{> project}}
            {{else}}
                <p><em>No projects yet!</em></p>
            {{/each}}
            </ul>
        </div>
    </div>
</main>

<!-- Modal  Add Profile Pic-->
<div class="modal fade" id="uploadProfilePic">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">x</button>
                <h4 class="modal-title">Change Profile Picture</h4>
            </div>
            <div id = 'upload_modal' class="modal-body">
                <input type="file" name="fileselect" id="fileselect" accept='image/*'>
                <p class="help-block">Browse for picture to add.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id='upload_profile_button' type="button" class="btn btn-default">Upload</button>
            </div>
        </div>
    </div>
</div>
